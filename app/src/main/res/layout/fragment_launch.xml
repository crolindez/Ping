<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.carlosrolindez.ping.LaunchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/windows"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/windows"
            android:baselineAligned="false">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/player_name"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:textSize="30sp"
                android:layout_marginRight="5dp" />" />

            <EditText
                android:id="@+id/player_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <Button
            android:id="@+id/button_easy"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="@string/easy"
            android:visibility="visible"
            android:layout_weight="1"
            android:background="@color/colorEasy"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/button_medium"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="@string/medium"
            android:visibility="visible"
            android:layout_weight="1"
            android:background="@color/colorMedium"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />


        <Button
            android:id="@+id/button_hard"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="@string/hard"
            android:visibility="visible"
            android:layout_weight="1"
            android:background="@color/colorHard"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />


        <Button
            android:id="@+id/button_expert"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="@string/expert"
            android:visibility="visible"
            android:layout_weight="1"
            android:background="@color/colorExpert"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp" />



    </LinearLayout>



</FrameLayout>
